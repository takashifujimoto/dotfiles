
#options:  Taken from youtube "Ratpoison + EvilWM on Archlinux" video
unmanage Feh
unmanage gimp
unmanage Mplayer


#video
exec conky
#exec dzen2

# workspaces
exec rpws init 6 -k
bind F1 exec rpws 1
bind F2 exec rpws 2
bind F3 exec rpws 3
bind F4 exec rpws 4
bind F5 exec rpws 5
bind F6 exec rpws 6


## Frames
#set padding 0 24 0 0
set padding 0 2 0 1
set fgcolor #ffffff
set bgcolor #505050
set winname name
set winfmt %s%8t
set bargravity n
set barborder 0 
set bwcolor dig gray

#set font
set font -*-Droid Sans-11
set bgcolor #2E3440
set fgcolor #D8DEE9

set transgravity center
set bargravity   nw
set inputwidth   800
set winname      class


## binding  (CAPSLock as an escape key
#  exec xmodmap -e 'clear Lock' -e 'keycode 66 = F13'
#escape F13

#set wallpaper
exec feh --bg-scale Pictures/wallpapers/ocean.jpg
#exec feh --bg-scale Pictures/wallpapers/brain.png
#exec feh --bg-scale Pictures/wallpapers/.png

#Java Swing Applications
#see https://wiki.archlinux.org/index.php/Ratpoison/#Java_Swing_Applications
exec wmname LG3D
