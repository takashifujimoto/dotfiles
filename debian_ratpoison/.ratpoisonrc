
#options:  Taken from youtube "Ratpoison + EvilWM on Archlinux" video
unmanage Feh
unmanage gimp
unmanage Mplayer


#video
exec conky
#exec dzen2

# workspaces
exec rpws init 4 -k
bind F1 exec rpws 1
bind F2 exec rpws 2
bind F3 exec rpws 3
bind F4 exec rpws 4


## Frames
set border 0
set padding 0 0 0 17 
#set fgcolor #ffffff
#set bgcolor #505050
#set bwcolor dig gray
set bargravity n
set barborder 0 
set inputwidth   800
set transgravity center
#set winname      class
set winname name
set winfmt %s%8t

#set font
set font -*-Droid Sans-11
#set bgcolor #2E3440
#set fgcolor #D8DEE9



#aliases ??
