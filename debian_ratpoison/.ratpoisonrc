#escape  (default C-t)
#escape Hyper_L  #Super_L
escape F13 

#options:  Taken from youtube "Ratpoison + EvilWM on Archlinux" video
unmanage Feh
unmanage gimp
unmanage Mplayer


# workspaces
exec rpws init 4 -k
bind F1 exec rpws 1
bind F2 exec rpws 2
bind F3 exec rpws 3
bind F4 exec rpws 4


msgwait 5
set winfmt       %f%a%p%s%8t


##  Frames
set winname      class
set transgravity center
set gravity      center 
set padding      0 0 0 0
set boarder      0 0 0 0 
set bgcolor      #444444
set fgcolor      #878787
set winliststyle row


##  Bar
set inputwidth   600
set bargravity   c
set barpadding   4 1 
set barborder    0 
set barinpadding 5
set bwcolor      dig gray
set fwcolor      #af0000


#set font
set font -*-Droid Sans-11
set resizeunit 4


## binding  (CAPSLock as an escape key
#  exec xmodmap -e 'clear Lock' -e 'keycode 66 = F13'

#set wallpaper
exec feh --bg-scale ~/Pictures/Wallpapers/o3181026.png

#Java Swing Applications
#see https://wiki.archlinux.org/index.php/Ratpoison/#Java_Swing_Applications
#exec wmname LG3D

exec conky
